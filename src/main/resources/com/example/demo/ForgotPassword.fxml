            <AnchorPane fx:id="forgotPassword_form" prefHeight="400.0" prefWidth="361.6" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
