            <Button fx:id="btn_login" mnemonicParsing="false" prefHeight="30.0" prefWidth="194.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Go back to login page?" textFill="WHITE" underline="true" />
         </children></VBox>
      <AnchorPane layoutX="239.0" prefHeight="400.0" prefWidth="361.0" style="-fx-background-color: white;">
