<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.auth.Controllers.ForgotPasswordController">
   <children>
      <VBox prefHeight="400.0" prefWidth="239.0" style="-fx-background-color: #4169e1;" />
      <AnchorPane layoutX="239.0" prefHeight="400.0" prefWidth="361.0" style="-fx-background-color: white;">
         <children>
            <Label alignment="CENTER" layoutX="55.0" prefHeight="56.0" prefWidth="250.0" text="Forgot Password?">
               <font>
                  <Font name="Roboto Light" size="30.0" />
               </font></Label>
            <Label layoutX="22.0" layoutY="74.0" prefHeight="45.0" prefWidth="118.0" text="Enter Email:">
               <font>
                  <Font name="Roboto Light" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="tf_email" layoutX="140.0" layoutY="73.0" prefHeight="46.0" prefWidth="193.0" promptText="Email">
               <font>
                  <Font name="Roboto Light" size="22.0" />
               </font>
            </TextField>
            <Button fx:id="btn_send" layoutX="22.0" layoutY="142.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="316.0" style="-fx-background-color: #4169e1; -fx-cursor: hand;" text="Send Change Password Code" textFill="WHITE">
